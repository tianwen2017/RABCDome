@model IEnumerable<RABCDome.Model.Role>
@{
    ViewBag.Title = "角色管理";
}

<a id="create" href="#">新增</a>
<table>
    <tr>
        <th>ID</th>
        <th>名称</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td style="width: 100px;">
                <a class="edit" href="@Url.Action("Edit", new {id = item.id})">编辑</a>
                @Html.ActionLink("删除", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
@section Script
{
    <script>
        $("#create").click(function () {
            layer.open({
                type: 2,
                title: '角色管理-新增',
                shadeClose: true,
                shade: false,
                area: ['500px', '400px'],
                content: '@Url.Action("Create")'
            });
        });

        $(".edit").click(function () {
            var $that = $(this);
            layer.open({
                type: 2,
                title: '角色管理-编辑',
                shadeClose: true,
                shade: false,
                area: ['500px', '400px'],
                content:$that.attr("href")
            });
            event.preventDefault();
        });
    </script>
}


