@{
    Layout = "~/Views/_LayoutForm.cshtml";
}

<form class="bootstrap-frm">
    <h1>模块管理-新增</h1>
    <label>
        <span>模块名称</span>
        <input type="text" name="name" placeholder="请输入模块名称" />
    </label>
    <label>
        <span>控制器</span>
        <input type="text" name="Controller" placeholder="请输入控制器名称" />
    </label>
    <label>
        <span>&nbsp;</span>
        <input type="button" class="button" value="提交" />
    </label>
</form>

@section Script
{
    <script>
        $(".button").click(function () {
            parent.location.reload();
            $.ajax({
                url: '@Url.Action("Save","Module")',
                type: "Post",
                data: $("form").serialize(),
                success:function(data) {
                    if (data.code===200) {
                        var index = parent.layer.getFramIndex(window.name);
                        parent.layer.close(index);
                    } else {
                        alert("提交失败");
                    }
                }
        });
        });
    </script>
}
