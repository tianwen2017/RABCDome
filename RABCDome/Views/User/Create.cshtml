@{
    Layout = "~/Views/_LayoutForm.cshtml";
}

<form class="bootstrap-frm">
    <h1>用户管理-新增</h1>
    <label>
        <span>用户名称</span>
        <input type="text" name="UserName" placeholder="请输入用户名称" />
    </label>
    <label>
        <span>用户密码</span>
        <input type="text" name="PassWord" placeholder="请输入用户密码" />
    </label>
    <label>
        <span>&nbsp;</span>
        <input type="button" class="button" value="提交" />
    </label>
</form>

@section Script
{
    <script>
        $(".button").click(function () {
            parent.location.reload();
            $.ajax({
                url: '@Url.Action("Save","User")',
                type: "post",
                data: $("form").serialize(),
                success:function(data) {
                    if (data.code===200) {
                        var index = parent.layer.getFramIndex(window.name);
                        parent.layer.close(index);
                    } else {
                        alert("提交失败");
                    }
                }
            });
        });
    </script>
}



